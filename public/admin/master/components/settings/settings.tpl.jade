.modal-header(ng-click='mod.close()')
    .pull-right
        em.ion-close-round.text-soft
    h4.modal-title
        span(ng-bind="mod.modalTitle")
.modal-body

    .clearfix.mb
        .pull-left.wd-tiny.mb(ng-repeat="theme in themes")
            .setting-color
                label(ng-class="'preview-' + theme")
                    input(type="radio", name="setting-theme", ng-model="app.currentTheme" ng-value="$index", ng-change="app.theme = themes[$index]")
                    span.ion-checkmark-round
                    .t-grid: .t-row
                        .t-col.preview-header
                        .t-col.preview-sidebar
                        .t-col.preview-content
    hr
    p
        label.mda-checkbox
            input(type='checkbox', ng-model="app.sidebar.showheader")
            em.bg-indigo-500
            | Sidebar header
    p
        label.mda-checkbox
            input(type='checkbox', ng-model="app.sidebar.showtoolbar")
            em.bg-indigo-500
            | Sidebar toolbar
    p
        label.mda-checkbox
            input(type='checkbox', ng-model="app.sidebar.offcanvas")
            em.bg-indigo-500
            | Sidebar offcanvas
    hr
    p Navigation icon
    p
        label.mda-radio
            input(type='radio', name="headerMenulink", ng-model="app.header.menulink", value="menu-link-close")
            em.bg-indigo-500
            | Close icon
    p
        label.mda-radio
            input(type='radio', name="headerMenulink", ng-model="app.header.menulink", value="menu-link-slide")
            em.bg-indigo-500
            | Slide arrow
    p
        label.mda-radio
            input(type='radio', name="headerMenulink", ng-model="app.header.menulink", value="menu-link-arrow")
            em.bg-indigo-500
            | Big arrow
    hr
    button.btn.btn-default.btn-raised(type="button", toggle-fullscreen="") Toggle fullscreen
    hr
    p Change language
    // START Language list
    .btn-group(uib-dropdown='', is-open='language.listIsOpen')
        button.btn.btn-default.btn-block.btn-raised(type='button', uib-dropdown-toggle="")
            | {{language.selected}}
            span.caret
        ul.dropdown-menu.animated.fadeInUpShort(role='menu')
            li(ng-repeat='(localeId, langName) in language.available')
                a(ng-click='language.set(localeId, $event)') {{langName}}
    // END Language list
