.container-fluid
    .card
        .card-heading
            .card-title Material Forms
        .card-body.bg-blue-grey-900
            .row
                .col-sm-4
                    .mda-form-group
                        .mda-form-control.mda-form-control-dark
                            input.form-control(ng-model='user.title', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Title
                .col-sm-4
                    .mda-form-group
                        .mda-form-control.mda-form-control-dark
                            input.form-control(ng-model='user.email', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Email
        .card-body
            .row
                .col-sm-12
                    .mda-form-group
                        .mda-form-control
                            input.form-control(disabled='', ng-model='user.company', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Company(disabled)
                .col-sm-6
                    .mda-form-group.float-label
                        .mda-form-control
                            input.form-control(ng-model='user.firstName', required='', tabindex='0', aria-required='true', aria-invalid='true')
                            .mda-form-control-line
                            label First Name
                .col-sm-6
                    .mda-form-group.float-label
                        .mda-form-control
                            input.form-control(ng-model='user.lastName', required='', tabindex='0', aria-required='true', aria-invalid='true')
                            .mda-form-control-line
                            label Last Name
                .col-sm-12
                    .mda-form-group
                        .mda-form-control
                            input.form-control(ng-model='user.address', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Address
                .col-sm-12
                    .mda-form-group
                        .mda-form-control
                            input.form-control(ng-model='user.address2', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Address 2
            .row
                .col-sm-4
                    .mda-form-group
                        .mda-form-control
                            input.form-control(ng-model='user.city', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label City
                .col-sm-4
                    .mda-form-group
                        .mda-form-control
                            input.form-control(ng-model='user.state', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label State
                .col-sm-4
                    .mda-form-group
                        .mda-form-control
                            input.form-control(ng-model='user.postalCode', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Postal Code
            .row
                .col-sm-12
                    .mda-form-group
                        .mda-form-control
                            textarea.form-control(ng-model='user.biography', rows='4', aria-multiline='true', tabindex='0', aria-invalid='false')
                            .mda-form-control-line
                            label Biography
                            span.mda-form-msg.right Any message here
            .row
                .col-sm-12
                    .mda-form-group
                        .mda-form-control
                            select.form-control(ng-model='user.select')
                                option(value="1") Option 1
                                option(value="2") Option 2
                                option(value="3") Option 3
                                option(value="4") Option 4
                                option(value="5") Option 5
                            .mda-form-control-line
                            label Select
    .card
        .card-heading.bg-primary
            .pull-right
                em.ion-ios-browsers-outline.icon-2x.va-top
            .card-title Material Forms
        .card-toolbar.bg-primary Errors
        .card-body
            form.form-validate
                .mda-form-group.float-label.mb
                    .mda-form-control
                        input.form-control(ng-model='user.clientName', required='', tabindex='0', aria-required='true', aria-invalid='true', ng-pattern="/^[a-zA-Z0-9]{6,10}$/")
                        .mda-form-control-line
                        label Client Name
                    span.mda-form-msg Input should match 'a-zA-Z0-9' and 6-10 length
                .mda-form-group
                    .mda-form-control
                        input.form-control(ng-model='user.salary', tabindex='0', aria-invalid='true', ng-minlength="6")
                        .mda-form-control-line
                        label Salary
                    span.mda-form-msg Your salary must be at least 6 digits

    .card
        .card-heading.bg-primary
            .card-title Icons
        .card-body
            .mda-form-group.float-label.mb.mda-input-group
                .mda-form-control
                    input.form-control(type='text', ng-model="username")
                    .mda-form-control-line
                    label Username
                span.mda-input-group-addon
