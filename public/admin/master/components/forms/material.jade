            .mda-form-group.mb.mda-input-group
                .mda-form-control
                    input.form-control(type='text', ng-model="phone")
                    .mda-form-control-line
                    label Phone
                span.mda-input-group-addon
                    em.ion-ios-telephone.text-primary.icon-lg
