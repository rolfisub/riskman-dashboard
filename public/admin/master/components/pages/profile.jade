                        ul.dropdown-menu.md-dropdown-menu.dropdown-menu-right(role='menu')
                            li
                                a(href='') Action 1
                            li
                                a(href='') Action 2
                    // END dropdown
                    | About
                .card-body
                    p(editable-textarea="user.data.about" e-form="user.profileForm") {{user.data.about}}
                .card-divider
                .card-offset
                    .card-offset-item.text-right
                        button(type="button", ng-show="!user.profileForm.$visible", ng-click="user.profileForm.$show()").btn-raised.btn.btn-warning.btn-circle.btn-lg
