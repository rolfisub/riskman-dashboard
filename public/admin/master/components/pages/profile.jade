.container-fluid(ng-controller="ProfileController as user")
    .row
        // Left column
        .col-md-7.col-lg-8
            form.card(editable-form="", name="user.profileForm")
                h5.card-heading.pb0
                    // START dropdown
                    .pull-right.dropdown(uib-dropdown='dropdown2')
                        button.btn.btn-default.btn-flat.btn-flat-icon(type='button', uib-dropdown-toggle='')
