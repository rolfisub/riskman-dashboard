                        button(type="submit", ng-show="user.profileForm.$visible").btn-raised.btn.btn-success.btn-circle.btn-lg
                            em.ion-checkmark-round
                h5.card-heading.pb0 Contact Information
                .card-body
                    table.table.table-striped
                      tbody
                        tr
                            td
                                em.ion-document-text.icon-fw.mr
                                | Area
                            td {{user.data.area}}
                        tr
                            td
                                em.ion-egg.icon-fw.mr
                                | Birthday
                            td
                                span(editable-date="user.data.birthday", e-form="user.profileForm") {{ (user.data.birthday | date:"dd/MM/yyyy") || 'empty' }}
                        tr
                            td
                                em.ion-ios-body.icon-fw.mr
                                | Member since
                            td
                                span(editable-date="user.data.membersince", e-form="user.profileForm") {{ (user.data.membersince | date:"dd/MM/yyyy") || 'empty' }}
                        tr
                            td
                                em.ion-man.icon-fw.mr
                                | Gender
                            td
                                span(editable-select="user.data.gender", e-form="user.profileForm", e-ng-options="s.value as s.text for s in user.genders") {{ user.showGender() }}
                        tr
                            td
                                em.ion-android-home.icon-fw.mr
                                | Address
                            td
                                span(editable-text="user.data.address" e-form="user.profileForm") {{user.data.address}}
                        tr
                            td
                                em.ion-email.icon-fw.mr
                                | Email
                            td
                                span(editable-text="user.data.email" e-form="user.profileForm")
                                    a(href='') {{user.data.email}}
                        tr
                            td
                                em.ion-ios-telephone.icon-fw.mr
                                | Contact phone
                            td
                                span(editable-text="user.data.phone" e-form="user.profileForm") {{user.data.phone}}
